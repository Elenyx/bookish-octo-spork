{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "rootDir": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": [
    "index.ts",
    "routes.ts",
    "db.ts",
    "storage.ts",
    "log.ts",
    "discord/**/*.ts",
    "services/**/*.ts",
    "generators/**/*.ts",
    "utils/**/*.ts",
    "shared/**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "vite.config.ts",
    "vite.ts",
    "vite.config.*",
    "**/vite.*"
  ]
}
